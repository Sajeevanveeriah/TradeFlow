# ==========================================
# TradeFlow Environment Variables
# ==========================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# ==========================================
# Application
# ==========================================
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=TradeFlow

# ==========================================
# Database (PostgreSQL)
# ==========================================
# For local development, use this format:
# DATABASE_URL="postgresql://username:password@localhost:5432/tradeflow?schema=public"
# For Supabase, get this from your project settings
DATABASE_URL="postgresql://postgres:your-password@db.your-project.supabase.co:5432/postgres"

# ==========================================
# Supabase (Authentication & Storage)
# ==========================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ==========================================
# JWT (JSON Web Tokens for Auth)
# ==========================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# ==========================================
# Stripe (Payments) - Australia
# ==========================================
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# Stripe Product/Price IDs (Create these in your Stripe Dashboard)
STRIPE_PRICE_STARTER_MONTHLY=price_starter_monthly
STRIPE_PRICE_STARTER_YEARLY=price_starter_yearly
STRIPE_PRICE_PROFESSIONAL_MONTHLY=price_professional_monthly
STRIPE_PRICE_PROFESSIONAL_YEARLY=price_professional_yearly
STRIPE_PRICE_PREMIUM_MONTHLY=price_premium_monthly
STRIPE_PRICE_PREMIUM_YEARLY=price_premium_yearly

# ==========================================
# Twilio (SMS Reminders)
# ==========================================
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+61412345678
# Australian phone number format: +614XXXXXXXX

# ==========================================
# SendGrid (Email)
# ==========================================
SENDGRID_API_KEY=SG.your-sendgrid-api-key
SENDGRID_FROM_EMAIL=hello@tradeflow.com.au
SENDGRID_FROM_NAME=TradeFlow

# ==========================================
# Rate Limiting (Upstash Redis - Optional)
# ==========================================
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-redis-token

# ==========================================
# Monitoring & Logging (Sentry - Optional)
# ==========================================
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# ==========================================
# Google Maps API (For address autocomplete & travel time)
# ==========================================
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# ==========================================
# Feature Flags
# ==========================================
ENABLE_SMS_REMINDERS=true
ENABLE_EMAIL_REMINDERS=true
ENABLE_TEAM_FEATURES=true
ENABLE_ANALYTICS=false

# ==========================================
# Trial & Subscription Settings
# ==========================================
TRIAL_DAYS=14
MAX_BOOKINGS_STARTER=100
MAX_BOOKINGS_PROFESSIONAL=500
MAX_BOOKINGS_PREMIUM=-1
MAX_CUSTOMERS_STARTER=50
MAX_CUSTOMERS_PROFESSIONAL=200
MAX_CUSTOMERS_PREMIUM=-1

# ==========================================
# Australian Business Settings
# ==========================================
DEFAULT_TIMEZONE=Australia/Sydney
DEFAULT_CURRENCY=AUD
GST_RATE=10.0
# ABN validation API (optional)
ABN_LOOKUP_GUID=your-abn-lookup-guid
